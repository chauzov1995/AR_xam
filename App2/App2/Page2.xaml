<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.Page2">
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="MenuItem1" Order="Primary" Icon="Microsoft.png" Text="Сохранить" Priority="0" Activated="OnButtonClicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Название"        x:Name="komment"              />
            <Entry Placeholder="Начальная сумма" Keyboard="Numeric"         x:Name="summa"              />
            <Picker x:Name="picker"  />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>